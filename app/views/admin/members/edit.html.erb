<div class="container">
    <div class="row py-4">
      <h4><%= @member.last_name+@member.first_name %>さんの会員情報編集</h4>
    </div>
      <%= form_with model: @member,url: admin_member_path(@member),  local:true do |f| %>
          <div class="form-group row">
            <%= f.label :"会員ID", class: "col-sm-2 col-form-label" %><%= @member.id %>
          </div>
          <div class="form-group row">
          <%= f.label :"名前", class: "col-sm-2 col-form-label" %>
          <%#= f.label :"(姓)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field  :last_name, autofocus: true, class: "col-lg-2" %>
          <%#= f.label :"(名)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :first_name, autofocus: true, class: "col-lg-2 offset-1 " %>
          </div>
          <div class="form-group row">
            <%= f.label :"フリガナ", class: "col-sm-2 col-form-label" %>
            <%#= f.label :"(セイ)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field  :last_furigana, autofocus: true, class: "col-lg-2" %>
            <%#= f.label :"(メイ)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field  :first_furigana, autofocus: true, class: "col-lg-2 offset-1 " %>
          </div>
          <div class="form-group row">
            <%= f.label :"郵便番号", class: "col-sm-2 col-form-label" %>
            <%=f.text_field :postal_code, autofocus: true, class: "col-lg-2"  %>
          </div>
          <div class="form-group row">
            <%= f.label :"住所", class: "col-sm-2 col-form-label" %>
            <%=f.text_field :address, autofocus: true, class: "col-lg-5"  %>
          </div>
          <div class="form-group row">
            <%= f.label :"電話番号", class: "col-sm-2 col-form-label" %>
            <%=f.text_field :phone_number, autofocus: true, class: "col-lg-3"  %>
          </div>
          <div class="form-group row">
            <%= f.label :"メールアドレス", class: "col-sm-2  col-form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
          </div>
          <div class="form-group row">
            <%= f.label "会員ステータス", class: "col-sm-2  col-form-label" %>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", class: "col-lg-1" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", class: "col-lg-1" %>
          </div>
          <div class="row py-4">
            <%= f.submit "編集内容を保存" , class: 'btn btn-success col-lg-2 ' %>
          </div>
      <% end %>
</div>