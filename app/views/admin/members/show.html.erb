<div class="container">
   <div class="row col pt-4">
    <h4><%= @member.last_name+@member.first_name %>さんの会員詳細</h4>
  </div>
  <div class="row col-9 ">
  <div class="table-responsive">
  <table class="table table-bordered">
    <tr>
      <th class="table-active">会員ID</th>
      <td class="table-active"><%= @member.id %></td>
    </tr>
    <tr>
      <th class="table-active">氏名</th>
      <td class="table-active"><%= @member.last_name+@member.first_name %></td>
    </tr>
    <tr>
      <th class="table-active">フリガナ</th>
      <td class="table-active"><%= @member.last_furigana+@member.first_furigana %></td>
    </tr>
    <tr>
      <th class="table-active">郵便番号</th>
      <td class="table-active"><%= @member.address %></td>
    </tr>
    <tr>
      <th class="table-active">住所</th>
      <td class="table-active"><%= @member.address %></td>
    </tr>
    <tr>
      <th class="table-active">電話番号</th>
      <td class="table-active"><%= @member.phone_number %></td>
    </tr>
    <tr>
      <th class="table-active">メールアドレス</th>
      <td class="table-active"><%= @member.email %></td>
    </tr>
    <tr>
      <th class="table-active">会員ステータス</th>
      <td class="table-active">
        <% if @member.is_deleted == false %>
         <p class="text-success font-weight-bold">有効</p>
        <% else %>
         <p class="text-secondary font-weight-bold">退会</p>
         <% end %>
      </td>
    </tr>
  </table>
  </div>
  <div class="row justify-content-center col-9 my-4">
      <%= link_to "編集する", edit_admin_member_path, class: 'btn btn-success col-lg-5' %>
      <%= link_to "注文履歴一覧に戻る" , admin_path(id: @member), class: 'btn btn-primary offset-1 col-lg-5' %>
  </div>
</div>