<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <h1>注文履歴一覧</h1>
        <table class='table'>
          <thead>
            <tr>
              <th class="active col-xs-4">購入日時</th>
              <th class="active col-xs-4">購入者</th>
              <th class="active">注文個数</th>
              <th class="active">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_order_path(order) do %><%= order.created_at.to_s(:datetime_jp) %><% end %></td>
                <td><%= order.member.last_name %><%= order.member.first_name %></td>
                <td><%= order.order_details.sum(:quantity) %></td>
                <td><%= order.order_status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>