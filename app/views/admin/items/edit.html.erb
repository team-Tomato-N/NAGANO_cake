<h1>商品編集</h1>
<%= form_with model: @item, url: admin_update_item_path(@item), method: :patch do |f| %>
  <%= f.label :商品画像 %>
  <%= f.file_field :item_image, accept: "image/*" %><br>
  <%= f.label :商品名 %>
  <%= f.text_field :name %><br>
  <%= f.label :商品説明 %>
  <%= f.text_area :explanation %><br>
  <%= f.label :ジャンル %>
  <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name) %><br>
  <%= f.label :税抜き価格 %>
  <%= f.text_field :not_tax_price %>円<br>
  <%= f.label :販売ステータス %>
  <%= f.radio_button :is_active, "販売中" %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, "販売停止" %>
  <%= f.label :is_active, "販売停止" %><br>
  <%= f.submit "変更を更新" %>
<% end %>