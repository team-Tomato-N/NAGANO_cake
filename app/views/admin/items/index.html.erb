<div class="container ">
  <div class="row py-4">
   <h3>商品一覧</h3>
   <div class="">
     <%= link_to "新規登録", new_admin_item_path, class: "" %>
   </div>

  </div>
<table class="table py-4">
  <thead>
   <tr>
    <th>商品id</th>
    <th>商品名</th>
    <th>税抜き価格</th>
    <th>ジャンル</th>
    <th>製造ステータス</th>
   </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id  %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.not_tax_price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
      </tr>
   <% end %>
  </tbody>
</table>
  </div>
