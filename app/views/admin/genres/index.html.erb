<div class="container">
    <div class="row justify-content-center pt-4">
      <h4>ジャンル一覧・追加</h4>
    </div>

      <%= form_with model: @genre,url: admin_genres_path, local:true ,class: "row justify-content-center " do |f| %>
        <div class="form-group row col-9 pt-4">
          <%= f.label :"ジャンル名", class: "col-form-label col-sm-2" %>
          <%=f.text_field :name, autofocus: true, class: "col-sm-3"  %>
          <%= f.submit "新規登録" , class: 'btn btn-success offset-1 col-sm-3' %>
        </div>
      <% end %>

    <div class="row  mt-4">
      <table class="table table-hover col-sm-5 justify-content-center">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%  @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>