<div class="container">
  <div class="row">
    <div class="col-7">
      <h1>ショッピングカート</h1>
    </div>
    <div class="col-5 pull-right">
      <%= link_to "カートを空にする", cart_item_destroy_all_path, method: :delete, class: "" %>
    </div>
  </div>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item do |f| %>
               <%= f.select :quantity, *[1..10] %>
               <%= f.submit "変更" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td>
              <%= link_to "削除", cart_item_path(cart_item), method: :delete, class: "" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% CartItem.cart_items_toral_price(@cart_items) %>
  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", items_path, class: "" %>
    </div>
    <div class="col">
      <table>
        <tr>
          <td>合計金額</td>
           <td><%= CartItem.cart_items_toral_price(@cart_items).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <!--<%#= link_to "情報入力に進む", orders_confirm_path, class: %>-->
  </div>
</div>