<div class="container">
  <div class="row py-4">
    <div class="col-3">
      <div class="top-genres mt-4">
      <%= render 'admin/genres/genre_sidebar', genres: @genres%>
      </div>
    </div>
    <div class="col-9">
      <div class="row">
        <h3 class="col-md-3">商品一覧</h3>
      </div>

      <div class="row d-flex flex-wrap">
        <% @items.each do |item| %>
        <% if item.is_active == "販売中" %>
        <div class=" col-3 flex-wrap">
          <%= link_to item_path(item) do %>
          <%= image_tag item.get_item_image(80, 80) %>
          <p class="text-left"><span><%= item.name %></span></p>
          <p class="text-left">¥<%= item.tax_price %></p>
        <% end %>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>