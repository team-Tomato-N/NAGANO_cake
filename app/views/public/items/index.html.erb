<div class="">
  <div class="row">
    <div class="col-3">

    </div>
    <div class="col-9">
      <h1>商品一覧</h1>
      <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
        <%= image_tag item.get_item_image(180, 130) %>
        <p><span>商品名</span>　<span><%= item.name %></span></p>
        <p>¥<%= item.tax_price %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>