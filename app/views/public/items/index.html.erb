<div class="container">
  <div class="row py-4">
    <div class="col-3">

    </div>
    <div class="col-9">
      <h3>商品一覧</h3>
      <% if @cart_items.any? %>
        <%= link_to "情報入力に進む",  new_order_path, class: "btn btn-success"%>
      <% end %>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
        <% if item.is_active == "販売中" %>
        <div class=" ml-5 flex-wrap">
          <%= link_to item_path(item) do %>
          <%= image_tag item.get_item_image(80, 80) %>
          <p class="text-left"><span>商品名</span> <span><%= item.name %></span></p>
          <p class="text-left">¥<%= item.tax_price %></p>
        <% end %>
        </div>
        <% end %>
      <% end %>
      </div>

    </div>
  </div>
</div>