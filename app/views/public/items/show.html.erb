<div class="">
  <div class="row">
    <div class="col-3">

    </div>
    <div class="col-9">
      <%= image_tag @item.get_item_image(200, 150) %>
      <h1><%= @item.name %>
      <p><%= @item.explanation %></p>
      <p>¥<%= @item.tax_price %>(税込)</p>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :quantity, *[1..10] %>
        <%= f.submit "カートに入れる" %>
      <% end %>
    </div>
  </div>
</div>