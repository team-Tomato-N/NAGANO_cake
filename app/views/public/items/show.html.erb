<div class="container">
  <div class="row py-4">
    <h3>商品詳細</h3>
  </div>
  <div class="col-md-3">
    <div class="top-genres mt-4">

    </div>
    <p>ジャンル一覧</p>
  </div>
  <div class="col-md-9">
    <div class="row d-flex">
      <div class="col-md-6">
        <%= image_tag @item.get_item_image(300, 200) %>
      </div>
      <div class="col-md-5 offset-md-1">
        <h4><%= @item.name %></h4>
        <h4><%= @item.explanation %></h4>
        <p>¥<%= @item.tax_price %>(税込)</p>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :quantity, *[1..10], class: "" %>
          <%= f.submit "カートに入れる", class: " ml-5 btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>