<div class = "container">
  <div class = "row">
    <h2>配送先登録/一覧</h2>
      <%= form_with model: @shopping_address do |f| %>
        <div class="form-group">郵便番号(ハイフンなし)</div><%= f.text_field :postal_code,  size: 30 %>
        <div class="form-group">住所</div><%= f.text_field :address,  size: 60 %>
        <div class="form-group">宛名</div><%= f.text_field :name,  size: 30 %>
        <div class="form-group"><%= f.submit '新規登録' , class: 'btn btn-success'%></div>
      <% end %>


        <table class="table">
          <thead>
            <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @shopping_addresses.each do |shopping_address| %>
            <tr>
              <td><%= shopping_address.postal_code %></td>
              <td><%= shopping_address.address %></td>
              <td><%= shopping_address.name %></td>
              <td>
                   <%= link_to "編集する" , edit_shopping_address_path(shopping_address), class: 'btn btn-success' %>
                   <%= link_to "削除する" ,class: 'btn btn-danger', method: :delete %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>