<div class = "container">
  <div class = "row py-4">
    <h3>配送先編集</h3>
  </div>
  <div class = "row">
      <%= form_with model: @shopping_address do |f| %>
        <div class="form-group">郵便番号(ハイフンなし)</div><%= f.text_field :postal_code,  size: 30 %>
        <div class="form-group">住所</div><%= f.text_field :address,  size: 60 %>
        <div class="form-group">宛名</div><%= f.text_field :name,  size: 30 %>
        <div class="form-group mt-4"><%= f.submit '変更内容を保存' , class: 'btn btn-success'%></div>
      <% end %>
  </div>
</div>