<div class="container">
<h1>注文情報確認</h1>
  <div class="row">
    <div class="col-xs-8 col-lg-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
                <!--%= image_tag cart_item.item, :image, fallback: "no_image.jpg", size:"80x50" %>-->
                <%= cart_item.item.name %>
            </td>
            <td>¥<%= (cart_item.item.not_tax_price * 1.1).floor.to_s(:delimited) %>円</td>
            <td><%= cart_item.quantity %></td>
            <td>¥<%= (cart_item.item.not_tax_price * cart_item.quantity * 1.1).floor.to_s(:delimited) %>円</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-3 col-lg-3">
      <table class="table table-bordered">
        <%= form_with model: @order, url: orders_path, local: true do |f| %>
          <tr>
            <th>送料</th>
            <td>
                ¥<%= @order.postage.to_s(:delimited) %>円
                <%= f.hidden_field :postage, :value => @order.postage %>
            </td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td>
              ¥<%= @total_price.to_s(:delimited) %>円
            </td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td>
              ¥<%= (@total_price + 800).to_s(:delimited) %>円
              <%= f.hidden_field :amount, :value => (@total_price + 800) %>
            </td>
          </tr>
      </table>
    </div>
  </div>

  <div class="row m-3 ">
    <h3 class="mr-3">支払方法</h3>
    <h4><%= @order.pay %></h4>
    <%= f.hidden_field :pay, :value => @order.pay %>
  </div>

  <div class="row m-3">
    <h3 class="mr-3">お届け先</h3>
    <div>
      <%= @order.postal_code.to_s.insert(3, "-") %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= @order.address %></br>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= @order.name %>
      <%= f.hidden_field :name, :value => @order.name %>
    </div>
  </div>

    <div class="text-right">
      <%= link_to "情報入力へ戻る", new_order_path %>
    </div>

    <div class="mt-2 text-center">
      <%= f.submit "購入を確定する", class: "btn btn-success text-center" %>
    </div>
    <% end %>
</div>