<div class = "container">
  <div class = "row py-4">
    <h3>ログイン</h3>
  </div>
  <div class = "row mt-4">
    <h4>会員の方はこちらからログイン</h4>
  </div>

<%= form_with model: @member, url: member_session_path do |f| %>
  <div class="form-group row mt-3">
    <%= f.label :"メールアドレス", class: "col-sm-3  col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
  </div>

  <div class="form-group row">
    <%= f.label :"パスワード", class: "col-sm-3 col-form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
  </div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class= "row mt-4 ">
    <div class ="space col-sm-3"></div>
    <%= f.submit "ログイン" , class: 'btn btn-primary col-sm-2' %>
    <% end %>
  </div>

  <div class= "row mt-4 ">
    <h4>会員登録がお済でない方</h4>
  </div>
    <%= link_to "こちら ", new_member_registration_path %>から新規登録を行ってください。

<%#= render "public/shared/links" %>
 </div>